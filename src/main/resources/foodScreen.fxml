<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="AnchorPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.UI.FoodController">
    <children>
        <VBox id="vb-sidebar" fx:id="vbSidebarMain1" layoutX="300.0" layoutY="55.0" prefHeight="290.0" prefWidth="162.0" styleClass="VBox">
            <children>
            <Label prefWidth="175.0" text="Search your meal!" />
            <TextField prefHeight="31.0" prefWidth="108.0" />
                <Label fx:id="label" minHeight="16" minWidth="69" prefHeight="21.0" prefWidth="166.0" text="Or select a category" />
                <CheckBox fx:id="veganOpt" mnemonicParsing="false" onMouseClicked="#displayVeganMeals" text="Vegan Meal" />
                <CheckBox fx:id="vegOpt" mnemonicParsing="false" onMouseClicked="#displayVegMeals" text="Vegetarian Meal" />
                <CheckBox fx:id="meatOpt" layoutX="10.0" layoutY="52.0" mnemonicParsing="false" onMouseClicked="#displayMeatMeals" text="Meat Meal" />
            </children>
        </VBox>
      <ScrollPane layoutX="50.0" layoutY="55.0" prefHeight="290.0" prefWidth="205.0" style="-fx-background: none;">
        <content>
            <VBox layoutX="4.0" prefHeight="285.0" prefWidth="200.0" styleClass="EVBox">
                <children>
                    <Label fx:id="mealBoxText" minHeight="16" minWidth="69" prefHeight="35.0" prefWidth="180.0" text="Pick your meal!" />
                    <Label fx:id="meal1" layoutX="10.0" layoutY="10.0" minHeight="16" minWidth="69" onMouseClicked="#selectMeal" prefHeight="37.0" prefWidth="200.0" text="Vegetarian Lasagna" />
                    <Label fx:id="meal2" layoutX="10.0" layoutY="47.0" minHeight="16" minWidth="69" onMouseClicked="#selectMeal" prefHeight="40.0" prefWidth="202.0" text="Steak" />
                    <Label fx:id="meal3" layoutX="10.0" layoutY="84.0" minHeight="16" minWidth="69" onMouseClicked="#selectMeal" prefHeight="40.0" prefWidth="202.0" text="Mozzarella sandwich" />
                    <Label fx:id="meal4" layoutX="10.0" layoutY="121.0" minHeight="16" minWidth="69" onMouseClicked="#selectMeal" prefHeight="40.0" prefWidth="202.0" text="Chicken" />
                    <Button fx:id="" mnemonicParsing="false" onAction="#getMealPoints" style="-fx-border-color: black;" text="Select Meal" />
                    <Button fx:id="upBtn" mnemonicParsing="false" style="-fx-border-color: black;" text="Show Next" />
                    <Button fx:id="downBtn" mnemonicParsing="false" style="-fx-border-color: black;" text="Show Previous" />
                </children>
            </VBox>
        </content>
      </ScrollPane>
      <Button layoutX="535.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#display" text="Help" />
    </children>
    <stylesheets>
        <URL value="@GeneralTemplate.css" />
    </stylesheets>
</AnchorPane>
